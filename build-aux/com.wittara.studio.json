{
    "id" : "com.wittara.studio",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "49",
    "sdk" : "org.gnome.Sdk",
    "command" : "witt-data-studio",
    "finish-args" : [
        "--device=dri",
        "--share=ipc",
        "--share=network",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--filesystem=host",
        "--env=GSK_RENDERER=gl"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
        "python3-asyncio.json",
        "python3-python-dateutil.json",
        "python3-numpy-aarch64.json",
        "python3-numpy-x86_64.json",
        "python3-polars-aarch64.json",
        "python3-polars-x86_64.json",
        "python3-fastexcel-aarch64.json",
        "python3-fastexcel-x86_64.json",
        "python3-pykdtree-aarch64.json",
        "python3-pykdtree-x86_64.json",
        "python3-witt-strutil.json",
        {
            "name" : "witt-data-studio",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/naruaika/witt-data-studio"
                }
            ]
        }
    ]
}
