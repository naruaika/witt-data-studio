{
    "id" : "com.macipra.witt.Devel",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "49",
    "sdk" : "org.gnome.Sdk",
    "command" : "run.sh",
    "finish-args" : [
        "--device=dri",
        "--share=ipc",
        "--share=network",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--filesystem=host",
        "--verbose",
        "--env=RUST_BACKTRACE=full",
        "--env=POLARS_VERBOSE=1",
        "--env=GOBJECT_DEBUG=instance-count",
        "--env=GTK_DEBUG=interactive",
        "--env=WDS_DEBUG=2"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
        "python3-debugpy.json",
        "python3-pytest.json",
        "python3-python-dateutil.json",
        "python3-pyarrow-aarch64.json",
        "python3-pyarrow-x86_64.json",
        "python3-numpy-aarch64.json",
        "python3-numpy-x86_64.json",
        "python3-scipy-aarch64.json",
        "python3-scipy-x86_64.json",
        "python3-polars-aarch64.json",
        "python3-polars-x86_64.json",
        "python3-lark.json",
        "python3-fastexcel-aarch64.json",
        "python3-fastexcel-x86_64.json",
        "python3-witt-strutil-devel.json",
        "python3-pyopengl.json",
        "python3-pyopengl-accelerate.json",
        {
            "name" : "witt-data-studio",
            "builddir" : true,
            "buildsystem" : "meson",
            "config-opts": [
                "-Dprofile=devel"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/naruaika/witt-data-studio"
                }
            ],
            "post-install" : [
                "install -m 755 -D build-aux/run.sh /app/bin/run.sh"
            ]
        }
    ]
}
