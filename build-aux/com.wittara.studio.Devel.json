{
    "id" : "com.wittara.studio.Devel",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "49",
    "sdk" : "org.gnome.Sdk",
    "command" : "run.sh",
    "finish-args" : [
        "--device=dri",
        "--share=ipc",
        "--share=network",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--filesystem=host",
        "--filesystem=xdg-run/gvfs",
        "--filesystem=xdg-run/gvfsd",
        "--talk-name=org.gtk.vfs.*",
        "--talk-name=org.freedesktop.secrets",
        "--env=GSK_RENDERER=gl",
        "--env=WDS_DEBUG=2",
        "--verbose"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
        "modules/python3-asyncio.json",
        "modules/python3-keyring-aarch64.json",
        "modules/python3-keyring-x86_64.json",
        "modules/python3-debugpy.json",
        "modules/python3-pytest.json",
        "modules/python3-python-dateutil.json",
        "modules/python3-numpy-aarch64.json",
        "modules/python3-numpy-x86_64.json",
        "modules/python3-polars-aarch64.json",
        "modules/python3-polars-x86_64.json",
        "modules/python3-connectorx-aarch64.json",
        "modules/python3-connectorx-x86_64.json",
        "modules/python3-pyarrow-aarch64.json",
        "modules/python3-pyarrow-x86_64.json",
        "modules/python3-duckdb-aarch64.json",
        "modules/python3-duckdb-x86_64.json",
        "modules/python3-fastexcel-aarch64.json",
        "modules/python3-fastexcel-x86_64.json",
        "modules/python3-pykdtree-aarch64.json",
        "modules/python3-pykdtree-x86_64.json",
        "modules/python3-witt-strutil-devel.json",
        {
            "name" : "witt-data-studio",
            "builddir" : true,
            "buildsystem" : "meson",
            "config-opts": [
                "-Dprofile=devel"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/naruaika/witt-data-studio"
                }
            ],
            "post-install" : [
                "install -m 755 -D build-aux/run.sh /app/bin/run.sh"
            ]
        }
    ]
}
