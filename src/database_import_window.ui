<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="Adw" version="1.0"/>
  <template class="DatabaseImportWindow" parent="AdwWindow">
    <property name="width-request">362</property>
    <property name="height-request">362</property>
    <property name="default-width">1280</property>
    <property name="default-height">800</property>
    <property name="title" translatable="yes">New Query</property>
    <child>
      <object class="AdwBreakpoint">
        <condition>max-width: 640sp</condition>
        <setter object="SplitView" property="collapsed">true</setter>
        <setter object="ViewSwitcher" property="policy">narrow</setter>
      </object>
    </child>
    <property name="content">
      <object class="AdwOverlaySplitView" id="SplitView">
        <property name="collapsed">false</property>
        <property name="show-sidebar">true</property>
        <property name="min-sidebar-width">320sp</property>
        <property name="sidebar">
          <object class="AdwNavigationPage">
            <property name="title" translatable="yes">Connections</property>
            <property name="child">
              <object class="AdwToolbarView">
                <child type="top">
                  <object class="AdwHeaderBar" id="SidebarHeaderBar"/>
                </child>
                <property name="content">
                  <object class="GtkBox">
                    <property name="orientation">vertical</property>
                    <property name="spacing">6</property>
                    <child>
                      <object class="GtkSearchEntry" id="SearchEntry">
                        <property name="margin-start">6</property>
                        <property name="margin-end">6</property>
                        <property name="hexpand">true</property>
                        <property name="placeholder-text" translatable="yes">Filter connections by name</property>
                        <property name="visible">false</property>
                        <signal name="search-changed" handler="_on_search_entry_changed" swapped="no"/>
                      </object>
                    </child>
                    <child>
                      <object class="GtkScrolledWindow" id="ListViewBox">
                        <property name="hexpand">true</property>
                        <property name="vexpand">true</property>
                        <property name="visible">false</property>
                        <child>
                          <object class="GtkListView" id="ListView">
                            <property name="hexpand">true</property>
                            <property name="vexpand">true</property>
                            <property name="model">
                              <object class="GtkSingleSelection" id="Selection">
                                <property name="autoselect">false</property>
                              </object>
                            </property>
                            <style>
                              <class name="navigation-sidebar"/>
                            </style>
                          </object>
                        </child>
                      </object>
                    </child>
                    <child>
                      <object class="AdwStatusPage" id="ListStatusPage">
                        <property name="hexpand">true</property>
                        <property name="vexpand">true</property>
                        <property name="icon-name">network-server-symbolic</property>
                        <property name="title" translatable="yes">No Connection</property>
                        <property name="description" translatable="yes">Try adding a new connection</property>
                        <style>
                          <class name="compact"/>
                        </style>
                      </object>
                    </child>
                  </object>
                </property>
              </object>
            </property>
          </object>
        </property>
        <property name="content">
          <object class="AdwNavigationPage">
            <property name="title" translatable="yes">Workspace</property>
            <property name="can-pop">false</property>
            <property name="child">
              <object class="AdwToolbarView">
                <child type="top">
                  <object class="AdwHeaderBar" id="ContentHeaderBar">
                    <property name="title-widget">
                      <object class="AdwViewSwitcher" id="ViewSwitcher">
                        <property name="stack">ViewStack</property>
                        <property name="policy">wide</property>
                      </object>
                    </property>
                  </object>
                </child>
                <property name="content">
                  <object class="GtkBox">
                    <property name="orientation">vertical</property>
                    <child>
                      <object class="GtkSeparator">
                        <property name="orientation">horizontal</property>
                      </object>
                    </child>
                    <child>
                      <object class="AdwViewStack" id="ViewStack">
                        <child>
                          <object class="AdwViewStackPage">
                            <property name="name">query</property>
                            <property name="title">Query</property>
                            <property name="icon-name">code-symbolic</property>
                            <property name="child">
                              <object class="GtkBox">
                                <property name="orientation">vertical</property>
                                <child>
                                  <object class="GtkLabel">
                                    <property name="hexpand">true</property>
                                    <property name="label" translatable="yes">All connections are read-only — is not configurable</property>
                                    <property name="justify">center</property>
                                    <property name="wrap">true</property>
                                    <style>
                                      <class name="dimmed-banner"/>
                                    </style>
                                  </object>
                                </child>
                                <child>
                                  <object class="GtkSeparator">
                                    <property name="orientation">horizontal</property>
                                  </object>
                                </child>
                                <child>
                                  <object class="GtkScrolledWindow">
                                    <child>
                                      <object class="GtkSourceView" id="SourceView">
                                        <property name="hexpand">true</property>
                                        <property name="vexpand">true</property>
                                        <property name="monospace">true</property>
                                        <property name="tab-width">4</property>
                                        <property name="right-margin">5</property>
                                        <property name="auto-indent">true</property>
                                        <property name="smart-backspace">true</property>
                                        <property name="show-line-marks">true</property>
                                        <property name="show-line-numbers">true</property>
                                        <property name="highlight-current-line">true</property>
                                        <property name="insert-spaces-instead-of-tabs">true</property>
                                      </object>
                                    </child>
                                  </object>
                                </child>
                              </object>
                            </property>
                          </object>
                        </child>
                        <child>
                          <object class="AdwViewStackPage">
                            <property name="name">output</property>
                            <property name="title">Output</property>
                            <property name="icon-name">table-symbolic</property>
                            <property name="child">
                              <object class="GtkBox">
                                <child>
                                  <object class="AdwStatusPage" id="OutputStatusPage">
                                    <property name="hexpand">true</property>
                                    <property name="vexpand">true</property>
                                    <property name="icon-name">table-symbolic</property>
                                    <property name="title" translatable="yes">No Output</property>
                                    <property name="description" translatable="yes">Try executing a query</property>
                                  </object>
                                </child>
                                <child>
                                  <object class="GtkBox" id="OutputViewBox">
                                    <property name="orientation">vertical</property>
                                    <property name="visible">false</property>
                                    <child>
                                      <object class="GtkLabel">
                                        <property name="hexpand">true</property>
                                        <property name="label" translatable="yes">Showing up to 1,000 rows — from the latest execution</property>
                                        <property name="justify">center</property>
                                        <property name="wrap">true</property>
                                        <style>
                                          <class name="dimmed-banner"/>
                                        </style>
                                      </object>
                                    </child>
                                    <child>
                                      <object class="GtkSeparator">
                                        <property name="orientation">horizontal</property>
                                      </object>
                                    </child>
                                    <child>
                                      <object class="AdwBin" id="OutputView"/>
                                    </child>
                                  </object>
                                </child>
                              </object>
                            </property>
                          </object>
                        </child>
                        <child>
                          <object class="AdwViewStackPage">
                            <property name="name">logs</property>
                            <property name="title">Logs</property>
                            <property name="icon-name">logs-symbolic</property>
                            <property name="child">
                              <object class="GtkBox">
                                <child>
                                  <object class="AdwStatusPage" id="LogsStatusPage">
                                    <property name="hexpand">true</property>
                                    <property name="vexpand">true</property>
                                    <property name="icon-name">logs-symbolic</property>
                                    <property name="title" translatable="yes">No Logs</property>
                                    <property name="description" translatable="yes">Try executing a query</property>
                                  </object>
                                </child>
                                <child>
                                  <object class="GtkScrolledWindow" id="LogsViewBox">
                                    <property name="visible">false</property>
                                    <child>
                                      <object class="GtkTextView" id="LogsView">
                                        <property name="margin-top">8</property>
                                        <property name="margin-bottom">8</property>
                                        <property name="margin-start">8</property>
                                        <property name="margin-end">8</property>
                                        <property name="hexpand">true</property>
                                        <property name="vexpand">true</property>
                                        <property name="wrap-mode">word</property>
                                        <property name="editable">false</property>
                                        <property name="monospace">true</property>
                                      </object>
                                    </child>
                                  </object>
                                </child>
                              </object>
                            </property>
                          </object>
                        </child>
                      </object>
                    </child>
                    <child>
                      <object class="GtkSeparator">
                        <property name="orientation">horizontal</property>
                      </object>
                    </child>
                  </object>
                </property>
                <child type="bottom">
                  <object class="GtkCenterBox" id="BottomToolbar">
                    <property name="orientation">horizontal</property>
                    <property name="margin-top">12</property>
                    <property name="margin-bottom">12</property>
                    <property name="margin-start">12</property>
                    <property name="margin-end">12</property>
                    <property name="start-widget">
                      <object class="GtkBox" id="ContextLabelBox">
                        <property name="orientation">horizontal</property>
                        <property name="margin-start">5</property>
                        <property name="margin-end">5</property>
                        <property name="valign">center</property>
                        <property name="spacing">8</property>
                        <property name="visible">false</property>
                        <child>
                          <object class="GtkImage">
                            <property name="icon-name">network-server-symbolic</property>
                          </object>
                        </child>
                        <child>
                          <object class="GtkLabel" id="ContextLabel">
                            <property name="lines">1</property>
                            <property name="ellipsize">end</property>
                            <style>
                              <class name="heading"/>
                            </style>
                          </object>
                        </child>
                        <style>
                          <class name="accent"/>
                        </style>
                      </object>
                    </property>
                    <property name="end-widget">
                      <object class="GtkBox">
                        <property name="spacing">10</property>
                        <child>
                          <object class="AdwSplitButton" id="RunButton">
                            <property name="action-name">connection.run-block</property>
                            <property name="valign">center</property>
                            <property name="sensitive">false</property>
                            <property name="menu-model">RunMenu</property>
                            <property name="child">
                              <object class="GtkBox">
                                <property name="spacing">5</property>
                                <child>
                                  <object class="AdwSpinner" id="RunSpinner">
                                    <property name="valign">center</property>
                                    <property name="width-request">24</property>
                                    <property name="height-request">24</property>
                                    <property name="visible">false</property>
                                  </object>
                                </child>
                                <child>
                                  <object class="GtkLabel">
                                    <property name="label" translatable="yes">Execute</property>
                                  </object>
                                </child>
                              </object>
                            </property>
                            <style>
                              <class name="flat"/>
                            </style>
                          </object>
                        </child>
                        <child>
                          <object class="GtkButton" id="ImportButton">
                            <property name="label" translatable="yes">Load</property>
                            <property name="sensitive">false</property>
                            <signal name="clicked" handler="_on_import_button_clicked" swapped="no"/>
                            <style>
                              <class name="pill"/>
                              <class name="suggested-action"/>
                            </style>
                          </object>
                        </child>
                      </object>
                    </property>
                  </object>
                </child>
              </object>
            </property>
          </object>
        </property>
      </object>
    </property>
    <style>
      <class name="view"/>
    </style>
  </template>
  <menu id="ConnectionMenu">
    <section>
      <item>
        <attribute name="label" translatable="yes">_MySQL</attribute>
        <attribute name="action">connection.add-new</attribute>
        <attribute name="target">mysql</attribute>
      </item>
      <item>
        <attribute name="label" translatable="yes">_PostgreSQL</attribute>
        <attribute name="action">connection.add-new</attribute>
        <attribute name="target">postgresql</attribute>
      </item>
      <item>
        <attribute name="label" translatable="yes">_SQLite</attribute>
        <attribute name="action">connection.add-new</attribute>
        <attribute name="target">sqlite</attribute>
      </item>
      <item>
        <attribute name="label" translatable="yes">_DuckDB</attribute>
        <attribute name="action">connection.add-new</attribute>
        <attribute name="target">duckdb</attribute>
      </item>
    </section>
  </menu>
  <menu id="RunMenu">
    <section>
      <item>
        <attribute name="label" translatable="yes">Execute</attribute>
        <attribute name="action">connection.run-all</attribute>
      </item>
      <item>
        <attribute name="label" translatable="yes">At Cursor</attribute>
        <attribute name="action">connection.run-block</attribute>
      </item>
    </section>
  </menu>
</interface>